{
  "name": "sistema-gestione-rifiuti-server",
  "version": "0.1.0",
  "description": "Backend per il Sistema di Gestione Rifiuti",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "init-admin": "ts-node src/scripts/init-admin.ts",
    "test": "jest",
    "setup-directories": "node -e \"const fs=require('fs'); ['temp','logs','uploads'].forEach(d=>{if(!fs.existsSync(d))fs.mkdirSync(d,{recursive:true}); console.log('✅',d);});\"",
    "verify-ocr": "node -e \"console.log('🔍 Verifica OCR...'); try{require('tesseract.js'); require('pdf2pic'); require('multer'); require('sharp'); console.log('✅ Tutte le dipendenze OCR funzionanti');} catch(e){console.log('❌',e.message);}\"",
    "test-ocr": "node -e \"(async()=>{try{const T=require('tesseract.js'); const w=await T.createWorker('ita',1); console.log('✅ OCR funzionante'); await w.terminate();} catch(e){console.log('❌',e.message);}})();\"",
    "clean-temp": "node -e \"const fs=require('fs'); const path=require('path'); try{fs.readdirSync('temp').forEach(f=>fs.unlinkSync(path.join('temp',f))); console.log('✅ Temp pulita');} catch(e){console.log('⚠️ Temp già vuota');}\"",
    "postinstall": "npm run setup-directories"
  },
  "keywords": [
    "express",
    "node",
    "typescript",
    "api",
    "ocr",
    "pdf-processing",
    "waste-management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.3.1",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "canvas": "^3.1.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "pdf2pic": "^3.2.0",
    "pg": "^8.11.3",
    "prisma": "^5.3.1",
    "sharp": "^0.34.2",
    "tesseract.js": "^6.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.10.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.198",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.19.1",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.6.4",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
